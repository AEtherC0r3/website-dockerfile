############################################################
# Dockerfile to build the reverse proxy
############################################################

# Use the HAProxy base image
FROM haproxy:1.6

# File Author / Maintainer
MAINTAINER AEtherC0r3

################## BEGIN INSTALLATION ######################

# Copy the configuration file
COPY haproxy.cfg /usr/local/etc/haproxy/haproxy.cfg

# Open ports 80, 443
EXPOSE 80
EXPOSE 443

################## INSTALLATION END ######################
